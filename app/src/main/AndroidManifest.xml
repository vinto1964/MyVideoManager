<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.anisma.www.myvideomanager" >

    <uses-sdk android:minSdkVersion="15" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AppGlobal"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TActFilmDetails"
            android:label="@string/title_activity_tact_film_details" >
        </activity>
        <activity
            android:name=".SActActors"
            android:label="@string/title_activity_sact_actors" >
        </activity>
        <activity
            android:name=".MActActors"
            android:label="@string/title_activity_mact_actors" >
        </activity>
        <activity
            android:name=".MActSettings"
            android:label="@string/title_activity_mact_settings" >
        </activity>
        <activity
            android:name=".TActHelp"
            android:label="@string/title_activity_tact_help" >
        </activity>
    </application>

</manifest>
