<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbRating"
        android:numStars="@integer/c_stars_number"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spGenre"
        android:entries="@array/genreD_array"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sGenre"
        android:id="@+id/tvGenre" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:id="@+id/lvGenres"
        android:layout_weight="0.25"
        android:layout_marginBottom="10dp"
        android:choiceMode="singleChoice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sCommentLabel"
        android:id="@+id/tvKommentarLabel"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edComment"
        android:layout_weight="0.23"
        android:editable="true"
        android:hint="@string/sComment"
        android:gravity="top" />

</LinearLayout>