<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:id="@+id/ivActorFoto"
        android:src="@mipmap/ic_actor"
        android:contentDescription="@string/sActorFoto" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:id="@+id/ivMask"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/sMask" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvActorLastName"
        android:text="Lastname"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivMask"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FirstName"
        android:id="@+id/tvActorFirstName"
        android:layout_below="@+id/tvActorLastName"
        android:layout_toRightOf="@+id/ivMask"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp" />
</RelativeLayout>